@model Product

<div class="col-sm-4">
    <div class="img-thumbnail">
        <img src="@Model.ImageThumbnailUrl" alt="" />
        <div class="caption">
            <h6 class="float-right" style="color: steelblue;">@Model.Price.ToString("c")</h6>
            <h6>
                <a>@Model.Name</a>
            </h6>
            <p style="font-size:small !important">@Model.ShortDescription</p>

        </div>
        <div class="addToCart text-right">
            <p class="button" >
                <a class="btn btn-success" id="cartButton" style="padding: 0.1rem 0.75rem;font-size:.85rem;"
                   asp-controller="ShoppingCart"
                   asp-action="AddToShoppingCart"
                   asp-route-productId="@Model.ProductId">
                    Add to cart
                </a>
            </p>
        </div>
    </div>
</div>