@model ShoppingCartViewModel

@if (Model.ShoppingCart.GetShoppingCartCount() > 0)
{
    <li>
        <a asp-controller="ShoppingCart" asp-action="Index">
            <i class="fa fa-shopping-cart"></i>
            <span id="cart-status">
                @Model.ShoppingCart.GetShoppingCartCount()
            </span>
        </a>
    </li>
}

